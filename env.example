# ==========================================
# CrystoDolar Backend - Environment Variables
# Copiar a .env y ajustar valores
# ==========================================

# Database (Neon.tech)
DATABASE_URL=postgresql://username:password@ep-name.region.neon.tech/crystodolar?sslmode=require
NEON_ENDPOINT=ep-name.region.neon.tech
NEON_DATABASE=crystodolar
NEON_USERNAME=username
NEON_PASSWORD=password

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=True
API_RELOAD=True
ENVIRONMENT=development

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# External APIs
BCV_API_URL=http://www.bcv.org.ve/
BINANCE_API_URL=https://p2p.binance.com/bapi/c2c/v2/friendly/c2c/adv/search

# Cache (opcional - Redis)
REDIS_URL=redis://localhost:6379
REDIS_ENABLED=False

# Rate Limiting
REQUESTS_PER_MINUTE=60
BURST_LIMIT=10

# Monitoring
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
LOG_LEVEL=INFO

# CORS
CORS_ORIGINS=["http://localhost:3000", "https://crystodolar.com"]
CORS_ALLOW_CREDENTIALS=True

# Background Tasks
SCHEDULER_ENABLED=True
CLEANUP_HOUR=2
UPDATE_FREQUENCY_SECONDS=300

# Notifications (opcional)
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_CHAT_ID=your-chat-id
EMAIL_ENABLED=False
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-email-password

# Data Sources Config
BCV_UPDATE_INTERVAL=3600  # 1 hora
BINANCE_UPDATE_INTERVAL=300  # 5 minutos
MAX_RETRIES=3
TIMEOUT_SECONDS=30
