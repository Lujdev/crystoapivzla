# ===========================================
# EJEMPLO DE CONFIGURACIÓN - CrystoAPIVzla
# ===========================================
# Copiar este archivo como .env y configurar las variables

# ===========================================
# BASE DE DATOS - SUPABASE
# ===========================================
# Transaction Mode (puerto 6543) - Para serverless
DATABASE_URL=postgresql://postgres.PROJECT_REF:PASSWORD@REGION.pooler.supabase.com:6543/postgres

# Session Mode (puerto 5432) - Para migraciones
DIRECT_DATABASE_URL=postgresql://postgres.PROJECT_REF:PASSWORD@REGION.pooler.supabase.com:5432/postgres

# Supabase API (opcional)
SUPABASE_URL=https://PROJECT_REF.supabase.co
SUPABASE_ANON_KEY=your_anon_key_here

# ===========================================
# SEGURIDAD
# ===========================================
SECRET_KEY=your-super-secret-key-here

# ===========================================
# CONFIGURACIÓN DE API
# ===========================================
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=true
API_RELOAD=true
ENVIRONMENT=development

# ===========================================
# REDIS CACHE
# ===========================================
REDIS_URL=redis://localhost:6379/0
REDIS_ENABLED=true
REDIS_TTL_CURRENT_RATES=600
REDIS_TTL_LATEST_RATES=300

# ===========================================
# RATE LIMITING
# ===========================================
REQUESTS_PER_MINUTE=60
BURST_LIMIT=10

# ===========================================
# MONITOREO
# ===========================================
SENTRY_DSN=
LOG_LEVEL=INFO

# ===========================================
# CORS
# ===========================================
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,https://yourdomain.com
CORS_ALLOW_CREDENTIALS=true

# ===========================================
# TAREAS EN SEGUNDO PLANO
# ===========================================
SCHEDULER_ENABLED=true
CLEANUP_HOUR=2
UPDATE_FREQUENCY_SECONDS=300

# ===========================================
# NOTIFICACIONES (OPCIONAL)
# ===========================================
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=
EMAIL_ENABLED=false
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=

# ===========================================
# FUENTES DE DATOS
# ===========================================
BCV_UPDATE_INTERVAL=3600
BINANCE_UPDATE_INTERVAL=3600
MAX_RETRIES=3
TIMEOUT_SECONDS=30
